#!/bin/bash

echo $1

dir=/data/code/$1
tmux new-session -d -s $1 -n $1 -c $dir nvim
tmux split-window -t $1:$1.1 -h -l 50 -c $dir
tmux split-window -t $1:$1.1 -v -f -l 15 -c $dir
tmux attach-session -t $1
