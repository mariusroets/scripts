#!/bin/bash

if [ "$1" == "detach" ]; then
    tmux detach
    exit 0
elif [ "$1" == "list" ]; then
    tmux list-sessions
    exit 0
elif [ "$1" == "kill" ]; then
    tmux kill-session
    exit 0
fi

if [ $# == 1 ]; then
    SESSION_NAME=$1
else
    SESSION_NAME=default
fi

tmux has-session -t $SESSION_NAME &> /dev/null
if [ $? != 0 ]; then
    tmux new-session -s $SESSION_NAME -n home -d
    sleep 0.2
    ### Install private key
    tmux send-keys -t $SESSION_NAME:home "key" C-m
    if [ -n "$TMUX" ]; then
        echo "Session $SESSION_NAME created, but not attached. Detach from this one first"
        exit 1
    fi
    if [ "$SESSION_NAME" == "prog" ]; then
        tmux new-window -c /data/python -n python
    fi
else
    if [ -n "$TMUX" ]; then
        CURRENT_SESSION=`tmux display-message -p '#S'`
        echo "You are attached to session $CURRENT_SESSION. Detach first."
        exit 1
    fi
fi
tmux attach-session -t $SESSION_NAME
