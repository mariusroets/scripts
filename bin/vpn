#!/bin/bash

vpnpid=`pidof openconnect`
if [ "$1" == "status" ]; then
    if [ -n "$vpnpid" ]; then
        echo "VPN is running with pid $vpnpid"
    else
        echo "VPN is not running"
    fi
    exit 0
fi
if [ -n "$vpnpid" ]; then
    sudo kill -2 $vpnpid
else
    sudo openconnect -b -u roetsm --usergroup Eskom --passwd-on-stdin ssl.eskom.co.za
fi
